%%
%% \PutPageBackgroundImage{/path/to/your/image.eps}
%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Comando para definir a imagem de fundo

\makeatletter
% Definir opções padrão com xkeyval
\define@key{PutPageBackgroundImage}{opacity}{\def\PutPageBackgroundImageOpacity{#1}} % opacity
\setkeys{PutPageBackgroundImage}{opacity=1.0}
\newcommand{\PutPageBackgroundImage}[2][]{%
    \setkeys{PutPageBackgroundImage}{#1}%
    \begin{figure}[t]
    \begin{tikzpicture}[remember picture,overlay]
        \node[at=(current page.center),anchor=center,inner sep=0pt,opacity=\PutPageBackgroundImageOpacity] {
            \includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{#2}
        };
    \end{tikzpicture}
    \end{figure}
}
\makeatother

